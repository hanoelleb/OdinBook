<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <% include navbar %>
    <p>Welcome to <%= title %></p>
    <% include post_form %>
    <% for ( var i = 0; i < posts.length; i++) { %>
        <div class='post'>
	    <% if (posts[i].user.avatar.data != null) { %>
                 <img class='avatar' src="<%= '/' + 
                      posts[i].user._id + '/profile/photo' %>">
            <% } %>
	    <a href=<%= '/post/' + posts[i]._id %> >See comments</a><br><br>
	    <a href="<%='/'+posts[i].user._id+'/timeline' %>">
                <%= posts[i].user.name %>
            </a>
	    <p><%= posts[i].content %></p>
	    <span>  
	    <form class='like' method='POST'
                 action='/?_method=PUT'>

                 <input type='hidden' name='post_id'
                      value='<%= posts[i]._id %>'></input>

                 <input type='submit' name='action'
                      value="<%= 'like this: ' + posts[i].likes  %>">
                 </input>
            </form>
	    <p class='date'>date: <%= posts[i].formatted_date %></p>
	    </span>
        </div>
    <% } %>
  </body>
</html>
